<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.benouada.damine.wirelesshomeapplication" >

    <application
        android:name=".WirelessHomeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustNothing" >
        </activity>
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RoomActivity"
            android:label=""
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".DeviceCategoriesActivity"
            android:label="DeviceCategoriesActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustNothing" >
        </activity>
        <activity
            android:name=".DeviceActivity"
            android:label=""
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".DeviceInterfaceActivity"
            android:label="@string/title_activity_device_interface"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
