<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mainRLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            fab:fab_colorNormal="#ff5ab3e6"
            fab:fab_colorPressed="#ff5090c1"
            fab:fab_labelStyle="@style/menu_labels_style">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/garage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#d85ccaff"
                fab:fab_colorPressed="@color/white_pressed"
                fab:fab_icon="@mipmap/r_garage"
                fab:fab_title="Garage" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/kitchen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fab:fab_colorNormal="@color/half_black"
                fab:fab_colorPressed="@color/white_pressed"
                fab:fab_icon="@mipmap/r_kitchen"
                fab:fab_title="Kitchen" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/bedroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/half_black"
                fab:fab_colorPressed="@color/white_pressed"
                fab:fab_icon="@mipmap/r_bedroom"
                fab:fab_title="Bedroom" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/livingroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/half_black"
                fab:fab_colorPressed="@color/white_pressed"
                fab:fab_icon="@mipmap/r_livingroom"
                fab:fab_title="Livingroom" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/bathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/half_black"
                fab:fab_colorPressed="@color/white_pressed"
                fab:fab_icon="@mipmap/r_bathroom"
                fab:fab_title="Bathroom" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/wc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/half_black"
                fab:fab_colorPressed="@color/white_pressed"
                fab:fab_icon="@mipmap/r_wc"
                fab:fab_title="WC" />
        </com.getbase.floatingactionbutton.FloatingActionsMenu>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:shadowColor="#ff9f9f9f"
            android:text="Add room  "
            android:textColor="#ff5090c1"
            android:textStyle="bold|normal|italic"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/add_button"
            android:layout_alignEnd="@+id/add_button" />

    <ImageButton
        android:layout_margin="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/garage1"/>

    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/kitchen2"
        android:layout_below="@+id/app_bar"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_gravity="center_horizontal|top" />

    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/bedroom2"
        android:layout_below="@+id/app_bar"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2"
        android:layout_gravity="right|top" />

    <ImageButton
        android:layout_marginLeft="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton5"
        android:src="@drawable/bathroom2"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_toRightOf="@+id/imageButton4"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_marginLeft="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/livingroom1"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|center_vertical" />

    <ImageButton
        android:layout_marginLeft="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton6"
        android:src="@drawable/wc2"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_toRightOf="@+id/imageButton5"
        android:layout_toEndOf="@+id/imageButton5"
        android:layout_gravity="right|center_vertical" />

    </RelativeLayout>



</android.support.v4.widget.DrawerLayout>
